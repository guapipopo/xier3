<?xml version="1.0" encoding="utf-8"?>
<layout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/detail_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/c1"
        android:layout_margin="10dp"
        android:background="@color/cardview_shadow_start_color"/>
    <TextView
        android:id="@+id/detail_name"
        android:layout_toRightOf="@+id/detail_icon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="up1"/>


    <TextView
        android:id="@+id/detail_fan"
        android:layout_toRightOf="@+id/detail_icon"
        android:layout_below="@+id/detail_name"
        android:text="粉丝数:100"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="30dp"/>


    <CheckBox
        android:id="@+id/detail_ison"
        android:layout_toRightOf="@+id/detail_icon"
        android:layout_below="@+id/detail_fan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="关注"
        android:checked="true"


        />

    <ImageView
        android:id="@+id/detail_png"
        android:layout_margin="2dp"
        android:layout_below="@+id/detail_icon"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/p1"
        />

    <Button
        android:id="@+id/detail_back"
        android:layout_below="@+id/detail_png"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="退出"
        android:gravity="center"
        android:background="@color/cardview_shadow_start_color"/>



</RelativeLayout>
</layout>